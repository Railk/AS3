package railk.as3.physics {	// Import Adobe's Point class.	import flash.geom.Point;		public class Mass extends Point {		// Store force as a point/vector.		public var force:Point = new Point();				// Store friction multiplier.		internal var _friction:Number = 1;				public function Mass($x:Number = 0, $y:Number = 0):void {			// Construct superclass with required arguments.			super($x, $y);		}				public function update():void {			// Apply friction to reduce the force.			force.x *= _friction;			force.y *= _friction;						// Apply force to update the position.			x += force.x;			y += force.y;		}		// Apply an external force.		public function impulse($impulse:Point):void {			force.x += $impulse.x;			force.y += $impulse.y;		}		// Accessors for friction.		public function get friction():Number {			return _friction;		}		public function set friction($friction:Number):void {			_friction = $friction;		}	}}